<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/darkblue"
    android:paddingLeft="20dp"
    android:paddingRight="10dp">
    <!--aashika please fix this eventually :)-->


    <TextView
        android:id="@+id/popupMessageTV"
        android:layout_width="280dp"

        android:layout_height="79dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="0dp"
        android:paddingRight="80dp"
        android:text="Would you like to buy x for x coins?"
        android:textColor="#000000"
        android:textSize="22sp" />

    <Button
        android:id="@+id/confirmBuyBtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignRight="@id/popupMessageTV"
        android:layout_marginLeft="-9dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_style"
        android:onClick="confirmBuy"
        android:text="Yes" />

</RelativeLayout>

