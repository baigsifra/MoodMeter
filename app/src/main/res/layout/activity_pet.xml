<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgbrown"
    android:paddingTop="20dp"
    >

    <Button
        android:id="@+id/popupMessageTV"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/moneyPetTV"
        android:background="@drawable/button_style"
        android:onClick="toStore"
        android:text="Store"
        android:textColor="@color/black"

        android:textSize="15sp" />
    <ImageView
        android:id="@+id/octopusPet"
        android:layout_width="210dp"
        android:layout_height="230dp"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/octopusorangehat"
        />

    <TextView
        android:id="@+id/moneyPetTV"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:paddingLeft="5dp"
        android:text="$____"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/petNameTV"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/octopusPet"
        android:layout_centerHorizontal="true"
        android:hint="petname"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:id="@+id/linePet"
        android:layout_width="450dp"
        android:layout_height="2dp"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@id/petNameTV"
        android:background="@color/black" />

    <TabHost
        android:id="@+id/tabHostPet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-4dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>


</RelativeLayout>