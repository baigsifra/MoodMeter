<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgbrown"
    android:paddingTop="20dp"
    >

    <Button
        android:id="@+id/popupMessageTV"
        android:layout_width="@dimen/widthPetBtn"
        android:layout_height="@dimen/heightPetBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/leftMarginPetBtn"
        android:layout_marginTop="@dimen/topMarginPetBtn"
        android:layout_marginRight="@dimen/rightMarginPetBtn"
        android:layout_marginBottom="@dimen/bottomMarginPetBtn"
        android:layout_toLeftOf="@id/moneyPetTV"
        android:background="@drawable/button_style"
        android:onClick="toStore"

        android:paddingLeft="@dimen/leftPaddingPetBtn"
        android:paddingTop="@dimen/topPaddingPetBtn"
        android:paddingRight="@dimen/rightPaddingPetBtn"
        android:paddingBottom="@dimen/bottomPaddingPetBtn"
        android:text="Store"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/octopusPet"
        android:layout_width="210dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        app:srcCompat="@drawable/octopusorangehat" />

    <TextView
        android:id="@+id/moneyPetTV"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:paddingLeft="5dp"
        android:text="$____"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/invisibleignore"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/octopusPet"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:id="@+id/linePet"
        android:layout_width="450dp"
        android:layout_height="2dp"
        android:layout_alignBottom="@id/invisibleignore"
        android:layout_centerVertical="true"
        android:layout_marginBottom="-10dp"

        android:background="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:background="@color/lightgreen"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightgreen"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgreen"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hatIV1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/shopIconSize"
                    android:onClick="itemSelected"
                    android:background="@color/white"
                    android:layout_marginVertical="@dimen/imagePadding"
                    android:layout_marginHorizontal="@dimen/imagePadding"
                    android:layout_marginLeft="10dp"
                    android:padding="@dimen/imagePadding"
                    app:srcCompat="@drawable/hat1" />

                <ImageView
                    android:id="@+id/hatIV2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/shopIconSize"
                    android:layout_weight="1"
                    android:layout_marginVertical="@dimen/imagePadding"
                    android:layout_marginHorizontal="@dimen/imagePadding"                    android:background="@color/white"
                    android:onClick="itemSelected"
                    android:padding="@dimen/imagePadding"
                    app:srcCompat="@drawable/hat2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgreen"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hatIV3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/shopIconSize"
                    android:layout_marginVertical="@dimen/imagePadding"
                    android:layout_marginHorizontal="@dimen/imagePadding"                    android:background="@color/white"
                    android:layout_weight="1"
                    android:onClick="itemSelected"
                    android:padding="@dimen/imagePadding"
                    app:srcCompat="@drawable/hat3" />

                <ImageView
                    android:id="@+id/hatIV4"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/shopIconSize"
                    android:layout_marginVertical="@dimen/imagePadding"
                    android:layout_marginHorizontal="@dimen/imagePadding"                    android:background="@color/white"
                    android:layout_weight="1"
                    android:onClick="itemSelected"
                    android:padding="@dimen/imagePadding"
                    app:srcCompat="@drawable/hat1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgreen"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hatIV5"
                    android:layout_width="0dp"
                    android:layout_marginVertical="@dimen/imagePadding"
                    android:layout_marginHorizontal="@dimen/imagePadding"                    android:background="@color/white"
                    android:layout_height="@dimen/shopIconSize"
                    android:layout_weight="1"
                    android:onClick="itemSelected"
                    android:padding="@dimen/imagePadding"
                    app:srcCompat="@drawable/hat2" />

                <ImageView
                    android:id="@+id/hatIV6"
                    android:layout_width="0dp"
                    android:layout_marginVertical="@dimen/imagePadding"
                    android:layout_marginHorizontal="@dimen/imagePadding"                    android:background="@color/white"
                    android:layout_height="@dimen/shopIconSize"
                    android:layout_weight="1"
                    android:onClick="itemSelected"
                    android:padding="@dimen/imagePadding"
                    app:srcCompat="@drawable/hat3" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>