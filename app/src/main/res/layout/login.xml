<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgbrown">

    <EditText
        android:id="@+id/loginPasswordET"
        android:layout_width="@dimen/editTextWidth"
        android:layout_height="@dimen/editTextHeight"
        android:layout_marginTop="@dimen/topMarginET"
        android:layout_marginBottom="@dimen/bottomMarginET"
        android:layout_marginLeft="@dimen/leftMarginET"
        android:layout_marginRight="@dimen/rightMarginET"
        android:paddingRight="@dimen/rightPaddingET"
        android:paddingLeft="@dimen/leftPaddingET"
        android:paddingTop="@dimen/topPaddingET"
        android:paddingBottom="@dimen/bottomPaddingET"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.525" />

    <EditText
        android:id="@+id/loginEmailET"
        android:layout_width="@dimen/editTextWidth"
        android:layout_height="@dimen/editTextHeight"
        android:layout_marginTop="@dimen/topMarginET"
        android:layout_marginBottom="@dimen/bottomMarginET"
        android:layout_marginLeft="@dimen/leftMarginET"
        android:layout_marginRight="@dimen/rightMarginET"
        android:paddingRight="@dimen/rightPaddingET"
        android:paddingLeft="@dimen/leftPaddingET"
        android:paddingTop="@dimen/topPaddingET"
        android:paddingBottom="@dimen/bottomPaddingET"
        android:ems="10"
        android:hint="email"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325" />

    <TextView
        android:id="@+id/loginTV"
        android:layout_width="@dimen/textWidthlog"
        android:layout_height="@dimen/textHeightlog"
        android:paddingTop="@dimen/topPaddingTV"
        android:paddingBottom="@dimen/bottomPaddingTV"
        android:paddingLeft="@dimen/leftPaddingTV"
        android:paddingRight="@dimen/rightPaddingTV"
        android:layout_marginBottom="@dimen/bottomMarginTV"
        android:layout_marginTop="@dimen/topMarginTV"
        android:layout_marginLeft="@dimen/leftMarginTV"
        android:layout_marginRight="@dimen/rightMarginTV"
        android:text="Please enter your email and password below."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <Button
        android:id="@+id/submitLoginBtn"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginLeft="@dimen/leftMarginBtn"
        android:layout_marginTop="@dimen/topMarginBtn"
        android:layout_marginRight="@dimen/rightMarginBtn"
        android:layout_marginBottom="@dimen/bottomMarginBtn"
        android:paddingTop="@dimen/topPaddingBtn"
        android:paddingRight="@dimen/rightPaddingBtn"
        android:paddingBottom="@dimen/bottomPaddingBtn"
        android:background="@drawable/button_style"
        android:onClick="accessAccount"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.729" />
</androidx.constraintlayout.widget.ConstraintLayout>